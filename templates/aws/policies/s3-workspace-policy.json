{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject"
            ],
            "Resource": [
                "arn:aws:s3:{{ .region }}:{{ .accountID }}:accesspoint/{{ .accessPointName }}/object/{{ .path }}*",
                "arn:aws:s3:::{{ .bucketName }}/{{ .path }}*",
                "arn:aws:s3:::{{ .bucketName }}/harvested/{{ .path }}*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::{{ .bucketName }}",
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "{{ .path }}*"
                    ]
                }
            }
        }
    ]
}